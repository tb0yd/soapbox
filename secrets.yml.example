# WordPress Podcast Hosting Stack - Secrets Configuration
# Copy this file to secrets.yml and replace the placeholder values with your actual credentials

# SSH Configuration
ssh:
  # Path to your SSH public key (used for server access)
  public_key_path: ~/.ssh/id_rsa.pub
  # Path to your SSH private key (used for server access)
  private_key_path: ~/.ssh/id_rsa
  # Username for the admin user on the server
  admin_username: admin
  # Strong password for the admin user (used for sudo access)
  admin_password: your_strong_unix_password_here

# DigitalOcean Configuration
digitalocean:
  # Your DigitalOcean API token
  # Generate one at: https://cloud.digitalocean.com/account/api/tokens
  token: your_digitalocean_api_token_here

# Domain Configuration
domain:
  # Your domain name (e.g., podcast.example.com)
  name: yourdomain.com
  # Email address for domain ownership verification
  owner_email: you@example.com

# AWS Configuration (for S3 and CloudFront)
aws:
  # AWS access key ID
  access_key_id: AKIAXXXXXXXXXXXXXXXX
  # AWS secret access key
  secret_access_key: your_aws_secret_access_key_here
  # AWS region where S3 bucket will be created
  region: us-east-1
  # Name of the S3 bucket for media storage
  s3_bucket: your-podcast-media-bucket
  # CloudFront distribution domain
  cloudfront_domain: xxxxxx.cloudfront.net

# WordPress Configuration
wordpress:
  # Site title for your WordPress installation
  site_title: "My Podcast Site"
  # WordPress admin username
  admin_user: admin
  # WordPress admin password (make this strong!)
  admin_password: your_strong_wordpress_password_here
  # WordPress admin email
  admin_email: admin@example.com 